<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<?import javafx.scene.control.Separator?>
<VBox spacing="20" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="vidmot.OpnunartimiController"
      style="-fx-background-color: #e6f4ea; -fx-padding: 25; -fx-border-radius: 10; -fx-background-radius: 10;">

    <Label text="Opnunartími" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />

    <Separator />

    <VBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Mánudaga - Föstudaga: 10:00 - 18:00" />
        <Label text="Laugardaga: 12:00 - 16:00" />
        <Label text="Sunnudaga: Lokað" />
    </VBox>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Loka" fx:id="lokaButton" onAction="#onLoka"
                style="-fx-background-color: #f44336;
               -fx-text-fill: white;
               -fx-background-radius: 5;
               -fx-padding: 8 16;
               -fx-font-weight: bold;"
                onMouseEntered="#onMouseOver"
                onMouseExited="#onMouseExit" />

    </HBox>

</VBox>


